<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="comment_list_item_style">
        <item name="android:padding">@dimen/trailer_padding_dp</item>
        <item name="android:layout_margin">@dimen/comment_margin</item>
    </style>

    <style name="comment_list_item_style.Author" parent="comment_list_item_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/author_txt_size</item>
    </style>

    <style name="view_line">
        <item name="android:layout_height">@dimen/one_dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="trailer_list_item_style">
        <item name="android:layout_margin">@dimen/margin_detail</item>
        <item name="android:padding">@dimen/trailer_padding_dp</item>
    </style>

    <style name="trailer_title_style">
        <item name="android:padding">@dimen/favorite_item_padding</item>
        <item name="android:textSize">@dimen/comment_title_txt_size</item>
    </style>

    <style name="detail_screen_bigtext_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>


    <style name="detail_screen_bigtext_bg_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>

    <style name="include_styles">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
